---
import Layout from '../../layouts/Layout.astro';
import { Server, Shield, Globe, Phone, Mail, ArrowRight } from 'lucide-astro';

const services = [
  {
    title: "Dell Warranty Extension",
    desc: "Official Dell ProSupport & ProSupport Plus renewal services for Servers, Storage, and Workstations.",
    icon: Shield
  },
  {
    title: "Enterprise Hardware",
    desc: "Authorized reseller of Dell PowerEdge Servers, Precision Workstations, and EMC Storage solutions.",
    icon: Server
  },
  {
    title: "IT Support & Maintenance",
    desc: "24/7 on-site support in Shanghai. 2-hour emergency response for critical hardware failures.",
    icon: Phone
  }
];
---

<Layout title="HaoDell - Authorized Dell Partner & Warranty Services in Shanghai">
  <div class="bg-theme-bg min-h-screen text-theme-text transition-colors duration-300">
    <!-- English Header -->
    <header class="bg-theme-surface/80 backdrop-blur-md shadow-sm sticky top-0 z-[60] border-b border-theme-border transition-colors duration-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
        <a href="/haodell/" class="flex items-center gap-2 group">
          <img src="/haodell/logo.png" alt="HaoDell Logo" class="h-8 w-auto object-contain" />
          <div class="text-2xl font-bold text-theme-text tracking-tight transition-colors duration-300">上海皓戴<span class="text-theme-accent text-sm ml-2">Global</span></div>
        </a>
        <a href="/haodell/" class="flex items-center text-theme-muted hover:text-theme-accent transition text-sm font-medium">
          <Globe class="w-4 h-4 mr-1" />
          中文官网
        </a>
      </div>
    </header>

    <!-- Hero -->
    <section class="relative bg-theme-bg text-theme-text py-24 overflow-hidden transition-colors duration-300">
      <!-- Background Effects -->
      <div class="absolute inset-0 z-0 transition-colors duration-300">
        <div class="absolute top-0 right-0 w-[800px] h-[800px] bg-theme-accent/20 rounded-full blur-3xl opacity-60"></div>
        <div class="absolute bottom-0 left-0 w-[600px] h-[600px] bg-theme-border/40 rounded-full blur-3xl opacity-60"></div>
      </div>
      
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="inline-block px-4 py-1.5 rounded-full bg-theme-surface border border-theme-border text-theme-accent text-sm font-medium mb-6 shadow-sm transition-colors duration-300">
          Official Dell Partner
        </div>
        <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight text-theme-text transition-colors duration-300">
          Trusted Dell Partner <br/>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-theme-accent to-cyan-500">in Shanghai</span>
        </h1>
        <p class="text-xl text-theme-muted max-w-2xl mb-10 leading-relaxed transition-colors duration-300">Providing enterprise-grade Dell hardware solutions and official warranty extension services for foreign businesses in China.</p>
        <div class="flex gap-4">
          <a href="#contact" class="px-8 py-4 bg-theme-accent hover:bg-theme-accent-hover text-white rounded-full font-bold transition shadow-lg shadow-theme-accent/30">Contact Us</a>
          <a href="mailto:support@haodell.com" class="px-8 py-4 bg-theme-surface hover:bg-theme-bg border border-theme-border text-theme-muted rounded-full font-bold transition shadow-sm transition-colors duration-300">Email Inquiry</a>
        </div>
      </div>
    </section>

    <!-- Services -->
    <section class="py-24 bg-theme-surface transition-colors duration-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-3 gap-8">
          {services.map(item => (
            <div class="bg-theme-surface p-8 rounded-2xl border border-theme-border hover:shadow-xl hover:shadow-theme-accent/10 transition-all hover:-translate-y-1 transition-colors duration-300">
              <div class="w-14 h-14 bg-theme-bg text-theme-accent rounded-xl flex items-center justify-center mb-6 transition-colors duration-300">
                <item.icon class="w-7 h-7" />
              </div>
              <h3 class="text-xl font-bold text-theme-text mb-3 transition-colors duration-300">{item.title}</h3>
              <p class="text-theme-muted leading-relaxed transition-colors duration-300">{item.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact -->
    <section id="contact" class="bg-theme-bg py-24 border-t border-theme-border transition-colors duration-300">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-12 text-theme-text transition-colors duration-300">Get in Touch</h2>
        <div class="grid md:grid-cols-2 gap-8 max-w-2xl mx-auto text-left">
          <div class="group flex items-center gap-6 p-6 bg-theme-surface border border-theme-border rounded-2xl hover:shadow-lg hover:shadow-theme-accent/10 transition-all transition-colors duration-300">
            <div class="p-4 bg-theme-bg rounded-full text-theme-accent group-hover:bg-theme-accent group-hover:text-white transition-colors duration-300">
              <Phone class="w-6 h-6" />
            </div>
            <div>
              <div class="text-sm text-theme-muted uppercase tracking-wider font-semibold transition-colors duration-300">English Hotline</div>
              <div class="text-2xl font-bold text-theme-text transition-colors duration-300">400-888-8888</div>
            </div>
          </div>
          <div class="group flex items-center gap-6 p-6 bg-theme-surface border border-theme-border rounded-2xl hover:shadow-lg hover:shadow-theme-accent/10 transition-all transition-colors duration-300">
            <div class="p-4 bg-theme-bg rounded-full text-theme-accent group-hover:bg-theme-accent group-hover:text-white transition-colors duration-300">
              <Mail class="w-6 h-6" />
            </div>
            <div>
              <div class="text-sm text-theme-muted uppercase tracking-wider font-semibold transition-colors duration-300">Email Support</div>
              <div class="text-2xl font-bold text-theme-text transition-colors duration-300">service@haodell.com</div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>
