---
import { ShieldCheck, ChevronDown } from 'lucide-astro';

interface Props {
	title: string;
	description?: string;
	keywords?: string;
}

const { title, description = "上海皓戴信息技术 - 戴尔/联想企业级授权合作伙伴，提供服务器硬件采购、原厂续保、AI私有化算力部署服务。", keywords = "Dell服务器, PowerEdge, 戴尔续保, 服务器维修, 上海戴尔代理商" } = Astro.props;
---

<!doctype html>
<html lang="zh-CN" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/haodell/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<style is:global>
			:root {
				/* Default: Premium Light (Style 1) */
				--theme-bg: #f8fafc;
				--theme-surface: #ffffff;
				--theme-text: #0f172a;
				--theme-muted: #64748b;
				--theme-border: #e2e8f0;
				--theme-accent: #2563eb;
				--theme-accent-hover: #1d4ed8;
			}
			[data-theme="blue"] {
				--theme-bg: #eff6ff;
				--theme-surface: #ffffff;
				--theme-text: #1e3a8a;
				--theme-muted: #64748b; /* Keep muted text neutral for readability */
				--theme-border: #bfdbfe;
				--theme-accent: #2563eb;
				--theme-accent-hover: #1d4ed8;
			}
			[data-theme="dark"] {
				--theme-bg: #1e293b;
				--theme-surface: #0f172a;
				--theme-text: #f8fafc;
				--theme-muted: #94a3b8;
				--theme-border: #334155;
				--theme-accent: #38bdf8;
				--theme-accent-hover: #0ea5e9;
			}
		</style>
	</head>
	<body class="bg-theme-bg font-sans text-theme-text antialiased selection:bg-theme-accent selection:text-white transition-colors duration-300">
		<!-- 背景光效 -->
		<div class="fixed inset-0 z-[-1] overflow-hidden pointer-events-none bg-theme-bg transition-colors duration-300">
			<!-- 极淡的顶部光晕 -->
			<div class="absolute top-[-20%] right-[-10%] w-[50%] h-[50%] bg-theme-accent/10 rounded-full blur-[120px]"></div>
			<div class="absolute bottom-[-20%] left-[-10%] w-[50%] h-[50%] bg-theme-accent/5 rounded-full blur-[120px]"></div>
		</div>

		<!-- 顶部导航 -->
		<header class="fixed top-0 w-full z-50 bg-slate-900/80 backdrop-blur-xl border-b border-white/10 shadow-lg transition-colors duration-300">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between items-center h-20">
					<!-- Logo 区域 -->
					<a href="/haodell/" class="flex-shrink-0 flex items-center gap-3 group cursor-pointer">
						<img src="/haodell/logo.png" alt="上海皓戴 Logo" class="w-auto h-10 object-contain" />
						<div class="flex flex-col">
							<span class="text-xl font-bold tracking-tight text-white transition-colors">上海皓戴</span>
							<span class="text-[10px] text-slate-400 font-medium tracking-wider uppercase transition-colors">Enterprise IT Solutions</span>
						</div>
					</a>

					<!-- 桌面端菜单 -->
					<nav class="hidden md:flex items-center gap-2">
						<!-- 原厂续保 (第一位) -->
						<a href="/haodell/services/server-warranty" class="flex items-center px-4 py-2 rounded-lg text-sm font-medium text-slate-300 hover:text-white hover:bg-white/5 border border-transparent hover:border-white/10 hover:shadow-lg hover:shadow-theme-accent/10 transition-all duration-300">
							原厂续保
						</a>

						<!-- 分隔符 -->
						<div class="w-px h-4 bg-white/10"></div>

						<!-- 服务器/工作站 -->
						<a href="/haodell/products/r760" class="flex items-center px-4 py-2 rounded-lg text-sm font-medium text-slate-300 hover:text-white hover:bg-white/5 border border-transparent hover:border-white/10 hover:shadow-lg hover:shadow-theme-accent/10 transition-all duration-300">
							服务器/工作站
						</a>

						<!-- 分隔符 -->
						<div class="w-px h-4 bg-white/10"></div>

						<!-- AI算力方案 -->
						<a href="/haodell/knowledge/deepseek-deployment-guide" class="flex items-center px-4 py-2 rounded-lg text-sm font-medium text-slate-300 hover:text-white hover:bg-white/5 border border-transparent hover:border-white/10 hover:shadow-lg hover:shadow-theme-accent/10 transition-all duration-300">
							AI算力方案
						</a>

						<!-- 分隔符 -->
						<div class="w-px h-4 bg-white/10"></div>

						<!-- 更多产品 (下拉菜单) -->
						<div class="relative group">
							<button class="flex items-center gap-1 px-4 py-2 rounded-lg text-sm font-medium text-slate-300 hover:text-white hover:bg-white/5 border border-transparent hover:border-white/10 hover:shadow-lg hover:shadow-theme-accent/10 transition-all duration-300 cursor-pointer">
								更多产品
								<ChevronDown class="w-4 h-4 opacity-70 group-hover:rotate-180 transition-transform duration-300" />
							</button>
							<!-- 下拉面板 -->
							<div class="absolute top-full left-0 mt-2 w-48 bg-slate-800/90 backdrop-blur-xl border border-white/10 rounded-xl shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform group-hover:translate-y-0 translate-y-2 overflow-hidden">
								<div class="py-1">
									<a href="#" class="block px-4 py-3 text-sm text-slate-300 hover:text-white hover:bg-white/10 transition-colors">
										NAS存储
									</a>
									<a href="#" class="block px-4 py-3 text-sm text-slate-300 hover:text-white hover:bg-white/10 transition-colors">
										云服务器
									</a>
									<a href="#" class="block px-4 py-3 text-sm text-slate-300 hover:text-white hover:bg-white/10 transition-colors">
										安全加密
									</a>
								</div>
							</div>
						</div>

						<!-- 分隔符 -->
						<div class="w-px h-4 bg-white/10"></div>

						<!-- 常见问题 -->
						<div class="relative group">
							<a href="/haodell/#qa" class="flex items-center px-4 py-2 rounded-lg text-sm font-medium text-slate-300 group-hover:text-white group-hover:bg-white/5 border border-transparent group-hover:border-white/10 transition-all duration-300">
								常见问题
								<svg class="w-4 h-4 ml-1 opacity-50 group-hover:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
							</a>
							<div class="absolute left-0 pt-2 w-48 opacity-0 translate-y-2 pointer-events-none group-hover:opacity-100 group-hover:translate-y-0 group-hover:pointer-events-auto transition-all duration-300 z-50">
								<div class="bg-slate-900/95 backdrop-blur-xl border border-white/10 rounded-xl shadow-2xl py-2 overflow-hidden">
									<a href="/haodell/knowledge" class="block px-4 py-3 text-sm text-slate-300 hover:text-white hover:bg-white/10 transition-colors">
										知识库
									</a>
								</div>
							</div>
						</div>

						<!-- 分隔符 -->
						<div class="w-px h-4 bg-white/10"></div>

						<!-- 关于我们 -->
						<a href="/haodell/about" class="flex items-center px-4 py-2 rounded-lg text-sm font-medium text-slate-300 hover:text-white hover:bg-white/5 border border-transparent hover:border-white/10 hover:shadow-lg hover:shadow-theme-accent/10 transition-all duration-300">
							关于我们
						</a>
					</nav>

					<!-- 右侧功能区 -->
					<div class="hidden md:flex items-center space-x-6">
						<a href="/haodell/en" class="text-xs font-bold text-slate-400 hover:text-white transition-colors uppercase tracking-widest">EN / 中文</a>
						<div class="flex items-center gap-3">
							<!-- 续保与支持 (下拉菜单) -->
							<div class="relative group">
								<button class="inline-flex items-center gap-2 px-6 py-2.5 rounded-full bg-theme-accent hover:bg-theme-accent-hover text-white font-medium shadow-md shadow-theme-accent/30 hover:shadow-lg transition-all duration-300">
									<ShieldCheck class="w-4 h-4" />
									<span class="text-sm">续保查询</span>
									<ChevronDown class="w-3 h-3 opacity-70 group-hover:rotate-180 transition-transform duration-300" />
								</button>
								
								<!-- 下拉面板 -->
								<div class="absolute top-full right-0 mt-2 w-48 bg-slate-900/95 backdrop-blur-xl border border-white/10 rounded-xl shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform group-hover:translate-y-0 translate-y-2 overflow-hidden z-[70]">
									<div class="py-1">
										<a href="https://www.dell.com/support/home/zh-cn" target="_blank" class="flex items-center gap-2 px-4 py-3 text-sm text-slate-300 hover:text-white hover:bg-white/10 transition-colors">
											<ShieldCheck class="w-4 h-4 text-theme-accent" />
											官方续保查询
										</a>
										<a href="https://www.dell.com/support/home/zh-cn/servicecenter" target="_blank" class="flex items-center gap-2 px-4 py-3 text-sm text-slate-300 hover:text-white hover:bg-white/10 transition-colors border-t border-white/5">
											<svg class="w-4 h-4 text-slate-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
											服务点查询
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</header>

		<main class="pt-20">
			<slot />
		</main>

		<!-- 底部 Footer -->
		<footer class="bg-slate-800 text-slate-400 py-12 border-t border-slate-700">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid grid-cols-1 md:grid-cols-4 gap-8">
				<div class="lg:col-span-2">
					<span class="text-2xl font-bold text-white">上海皓戴</span>
					<p class="mt-4 text-sm leading-6 max-w-md">
						专注企业级 IT 基础设施服务 15 年。作为 Dell Technologies 和 Lenovo 的授权合作伙伴，我们致力于为企业提供从硬件采购、私有云部署到全生命周期维保的一站式解决方案。
					</p>
				</div>
				<div>
					<h3 class="text-sm font-semibold text-white tracking-wider uppercase">核心业务</h3>
					<ul class="mt-4 space-y-2 text-sm">
						<li><a href="/haodell/products/r760" class="hover:text-blue-400 transition">PowerEdge 服务器</a></li>
						<li><a href="/haodell/knowledge/deepseek-deployment-guide" class="hover:text-blue-400 transition">AI 私有化算力搭建</a></li>
						<li><a href="/haodell/services/server-warranty" class="hover:text-blue-400 transition">Dell 原厂续保服务</a></li>
						<li><a href="/haodell/emergency-rescue" class="hover:text-red-400 transition font-bold text-red-400">紧急救援 (2小时达)</a></li>
					</ul>
				</div>
				<div>
					<h3 class="text-sm font-semibold text-white tracking-wider uppercase">联系我们</h3>
					<ul class="mt-4 space-y-3 text-sm">
						<li>上海市普陀区中山北路3300号</li>
						<li>400-888-8888 (7x24小时)</li>
						<li>support@haodell.com</li>
					</ul>
				</div>
			</div>
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-12 pt-8 border-t border-slate-800 text-xs text-center">
				&copy; 2025 上海皓戴信息技术有限公司 版权所有 | 沪ICP备XXXXXXXX号
			</div>
		</footer>
	</body>
</html>

<style is:global>
	/* 自定义滚动条 */
	::-webkit-scrollbar {
		width: 10px;
	}
	::-webkit-scrollbar-track {
		background: #f1f5f9;
	}
	::-webkit-scrollbar-thumb {
		background: #cbd5e1;
		border-radius: 5px;
	}
	::-webkit-scrollbar-thumb:hover {
		background: #94a3b8;
	}
</style>
